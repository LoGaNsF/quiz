<div class="form-group">
	<label for="quiz-question" class="col-sm-2 control-label">Pregunta</label>
	<div class="col-sm-10">
		<input type="text" class="form-control" id="quiz-question" name="quiz[question]" value="<%= quiz.question %>" placeholder="Pregunta">
	</div>
</div>
<div class="form-group">
	<label for="quiz-answer" class="col-sm-2 control-label">Respuesta</label>
	<div class="col-sm-10">
		<input type="text" class="form-control" id="quiz-answer" name="quiz[answer]" value="<%= quiz.answer %>" placeholder="Respuesta">
	</div>
</div>
<div class="form-group">
	<label for="quiz-theme" class="col-sm-2 control-label">Tema</label>
	<div class="col-sm-10">
		<select name="quiz[theme]" class="form-control" id="quiz-theme">
			<option value="otro" <% if (quiz.theme == 'otro') { %>selected<% } %>>Otro</option>
			<option value="humanidades" <% if (quiz.theme == 'humanidades') { %>selected<% } %>>Humanidades</option>
			<option value="ocio" <% if (quiz.theme == 'ocio') { %>selected<% } %>>Ocio</option>
			<option value="ciencia" <% if (quiz.theme == 'ciencia') { %>selected<% } %>>Ciencia</option>
			<option value="tecnologia" <% if (quiz.theme == 'tecnologia') { %>selected<% } %>>Tecnolog√≠a</option>
		</select>
	</div>
</div>
<div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
  		<button type="submit" class="btn btn-primary">Guardar</button>
	</div>
</div>