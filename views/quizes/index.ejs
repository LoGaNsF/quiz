<div class="row mb">
	<div class="col-lg-2 col-sm-12">
		<% if (session.user) { %>
			<a href="/quizes/new" class="btn btn-primary">Crear pregunta</a>
		<% } %>
	</div>
	<div class="col-lg-4 col-sm-12 col-lg-offset-6">
		<form action="/quizes" method="GET">
			<div class="input-group">
				<input type="text" name="search" class="form-control" placeholder="Buscar...">
				<span class="input-group-btn">
					<button class="btn btn-default" type="submit">
						<i class="glyphicon glyphicon-search"></i>
					</button>
				</span>
			</div>
		</form>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		<table class="table">
			<thead>
				<tr>
					<th>Pregunta</th>
					<th>Tema</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
			<% for (i = 0; i < quizes.length; i++) { %>
				<tr>
					<td><a href="/quizes/<%= quizes[i].id %>"><%= quizes[i].question %></a></td>
					<td><%= quizes[i].theme %></td>
					<td>
						<% if (session.user) { %>
							<ul class="list-inline">
								<li>
									<a href="/quizes/<%= quizes[i].id %>/edit" class="btn btn-default btn-xs">Editar</a>
								</li>
								<li>
									<form action="/quizes/<%= quizes[i].id %>?_method=delete" method="POST">
										<button type="submit" onclick="return confirm('Borrar: <%= quizes[i].question %>');" class="btn btn-default btn-xs">Eliminar</button>
									</form>
								</li>
							</ul>
						<% } %>
					</td>
				</tr>
			<% } %>
			</tbody>
		</table>
	</div>
</div>